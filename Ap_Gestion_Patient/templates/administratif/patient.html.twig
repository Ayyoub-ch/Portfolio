{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/patient.css') }}">
{% endblock %}

{% block body %}

<div class="container">

    <!--  Bouton Retour et Ajouter un patient  -->
    <div class="card mb-4">
        <div class="card-body d-flex justify-content-between">
            <a href="{{ path('app_administratif') }}" class="btn btn-secondary btn-sm">
                ‚Üê Retour
            </a>
            <a href="{{ path('app_ajout_patient') }}" class="btn btn-primary btn-sm">
                Ajouter un patient
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2>Liste des patients</h2>
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Pr√©nom</th>
                            <th>T√©l√©phone</th>
                            <th>Sexe</th>
                            <th>Note</th>
                            <th>Localit√©</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        {% for patient in patients %}
                            <tr>
                                <td>{{ patient.id }}</td>
                                <td>{{ patient.nom }}</td>
                                <td>{{ patient.prenom }}</td>
                                <td>{{ patient.telephone }}</td>
                                <td>{{ patient.sexe }}</td>
                                <td>{{ patient.note }}</td>
                                <td>{{ patient.localite ? patient.localite.ville ~ ' (' ~ patient.localite.codePostal ~ ')' : '' }}</td>
                                <td class="text-center actions-cell d-flex" style="gap: 5px; justify-content: center; align-items: center;"">
                                    <!-- Modifier -->
                                    <a href="{{ path('app_modifier_patient', {'id': patient.id}) }}"
                                       class="btn btn-sm btn-outline-primary">
                                        üîÑÔ∏è
                                    </a>
                                    <!-- Supprimer -->
                                    <form method="POST"
                                          action="{{ path('app_retirer_patient', {'id': patient.id}) }}"
                                          onsubmit="return confirm('Supprimer d√©finitivement ?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            üóëÔ∏è
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    Aucun patient trouv√©
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </div>

        </div>
    </div>

</div>

{% endblock %}
