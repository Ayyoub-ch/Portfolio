{% extends 'base.html.twig' %}

{% block title %}{{ is_edit ? 'Modifier' : 'Créer' }} un utilisateur{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin/users.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>{{ is_edit ? 'Modifier' : 'Créer' }} un utilisateur</h2>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>

                        {% if not is_edit %}
                        <div class="mb-3">
                            {{ form_label(form.password.first) }}
                            {{ form_widget(form.password.first) }}
                            {{ form_errors(form.password.first) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.password.second) }}
                            {{ form_widget(form.password.second) }}
                            {{ form_errors(form.password.second) }}
                        </div>
                        {% endif %}

                        <div class="mb-3">
                            {{ form_label(form.roles) }}
                            <div class="roles-container">
                                {{ form_widget(form.roles) }}
                            </div>
                            {{ form_errors(form.roles) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.service) }}
                            {{ form_widget(form.service) }}
                            {{ form_errors(form.service) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.localite) }}
                            {{ form_widget(form.localite) }}
                            {{ form_errors(form.localite) }}
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('app_admin_users') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> {{ is_edit ? 'Modifier' : 'Créer' }}
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            {% if is_edit %}
            <div class="card mt-3">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">Réinitialiser le mot de passe</h5>
                </div>
                <div class="card-body">
                    <p>Pour réinitialiser le mot de passe de cet utilisateur, contactez l'administrateur système ou utilisez la fonctionnalité de récupération de mot de passe.</p>
                    <small class="text-muted">L'utilisateur : {{ user.email }}</small>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
.roles-container {
    padding: 10px;
    border: 1px solid #ced4da;
    border-radius: 4px;
}

.roles-container input[type="checkbox"] {
    margin-right: 8px;
}

.roles-container label {
    display: block;
    margin-bottom: 8px;
    font-weight: normal;
}

.form-control {
    border: 1px solid #ced4da;
    padding: 0.375rem 0.75rem;
}

.form-label {
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.card {
    border: 1px solid #dee2e6;
    box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,0.075);
}

.card-header {
    background-color: #f8f9fa;
    border-bottom: 1px solid #dee2e6;
    padding: 1rem 1.25rem;
}

.card-header h2 {
    margin: 0;
    font-size: 1.5rem;
}

.invalid-feedback {
    display: block;
}
</style>
{% endblock %}
