{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Tableau de bord Administrateur</h1>
    
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Gestion des utilisateurs</h5>
                    <p class="card-text">Créer, modifier et supprimer des utilisateurs</p>
                    <a href="{{ path('app_admin_users') }}" class="btn btn-primary">
                        Accéder <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-hospital-user fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Gestion des patients</h5>
                    <p class="card-text">Consulter et gérer les patients</p>
                    <a href="#" class="btn btn-success">
                        Accéder <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-3x mb-3 text-info"></i>
                    <h5 class="card-title">Statistiques</h5>
                    <p class="card-text">Visualiser les statistiques du système</p>
                    <a href="#" class="btn btn-info text-white">
                        Accéder <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-3">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-bed fa-3x mb-3 text-warning"></i>
                    <h5 class="card-title">Gestion des lits</h5>
                    <p class="card-text">Gérer les lits et les chambres</p>
                    <a href="#" class="btn btn-warning">
                        Accéder <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x mb-3 text-secondary"></i>
                    <h5 class="card-title">Services</h5>
                    <p class="card-text">Gérer les services de l'hôpital</p>
                    <a href="{{ path('app_admin_services') }}" class="btn btn-secondary">
                        Accéder <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-cog fa-3x mb-3 text-dark"></i>
                    <h5 class="card-title">Paramètres</h5>
                    <p class="card-text">Configurer l'application</p>
                    <a href="#" class="btn btn-dark">
                        Accéder <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.container {
    max-width: 1200px;
}

.card {
    transition: transform 0.2s, box-shadow 0.2s;
    height: 100%;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
}

.row {
    margin-left: -15px;
    margin-right: -15px;
}

.col-md-4 {
    padding-left: 15px;
    padding-right: 15px;
}

@media (min-width: 768px) {
    .col-md-4 {
        flex: 0 0 33.333333%;
        max-width: 33.333333%;
    }
}
</style>
{% endblock %}
