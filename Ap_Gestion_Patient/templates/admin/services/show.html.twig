{% extends 'base.html.twig' %}

{% block title %}Détails du service - {{ service.libelle }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/admin/services.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-building"></i> {{ service.libelle }}</h1>
        <div>
            <a href="{{ path('app_admin_services_edit', {id: service.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Statistiques -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Statistiques</h5>
                </div>
                <div class="card-body">
                    <div class="stat-item">
                        <i class="fas fa-users fa-2x text-primary"></i>
                        <div>
                            <h3>{{ service.utilisateurs.count }}</h3>
                            <p>Utilisateur(s)</p>
                        </div>
                    </div>
                    <hr>
                    <div class="stat-item">
                        <i class="fas fa-door-open fa-2x text-success"></i>
                        <div>
                            <h3>{{ service.chambres.count }}</h3>
                            <p>Chambre(s)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Utilisateurs -->
        <div class="col-md-8 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-users"></i> Utilisateurs du service</h5>
                </div>
                <div class="card-body">
                    {% if service.utilisateurs.count > 0 %}
                        <div class="list-group">
                            {% for user in service.utilisateurs %}
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas fa-user"></i> {{ user.email }}
                                    </div>
                                    <div>
                                        {% for role in user.roles %}
                                            {% if role == 'ROLE_ADMIN' %}
                                                <span class="badge bg-danger">Admin</span>
                                            {% elseif role == 'ROLE_ADMINISTRATIF' %}
                                                <span class="badge bg-warning">Administratif</span>
                                            {% elseif role == 'ROLE_USER' %}
                                                <span class="badge bg-secondary">User</span>
                                            {% elseif role == 'ROLE_INFIRMIER' %}
                                                <span class="badge bg-secondary">Utilisateur</span>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted text-center">Aucun utilisateur rattaché à ce service</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <!-- Chambres -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-door-open"></i> Chambres du service</h5>
                </div>
                <div class="card-body">
                    {% if service.chambres.count > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Étage</th>
                                        <th>Nombre de lits</th>
                                        <th>Lits disponibles</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for chambre in service.chambres %}
                                        <tr>
                                            <td>#{{ chambre.id }}</td>
                                            <td>{{ chambre.etage }}</td>
                                            <td>{{ chambre.nombreLit }}</td>
                                            <td>
                                                {% set disponibles = 0 %}
                                                {% for lit in chambre.lits %}
                                                    {% if lit.disponibilite %}
                                                        {% set disponibles = disponibles + 1 %}
                                                    {% endif %}
                                                {% endfor %}
                                                <span class="badge bg-{{ disponibles > 0 ? 'success' : 'danger' }}">
                                                    {{ disponibles }} / {{ chambre.lits.count }}
                                                </span>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted text-center">Aucune chambre rattachée à ce service</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_admin_services') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
{% endblock %}